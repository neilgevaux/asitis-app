<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Date/time</th>
      <th>Room</th>
      <th>Feedback</th>
      <th>Rating</th>
      <th colspn="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.created_at %></td>
          <td><%= feedback.room %></td>
          <td><%= feedback.body %></td>
          <td><%= feedback.happy %></td>
          <td>
            <% link_to 'Show', feedback %>
            <% link_to 'Delete', feedback, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr> 
    <% end %>
  </tbody>

</table>

