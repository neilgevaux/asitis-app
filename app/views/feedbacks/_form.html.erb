<%= form_with(model: feedback) do |form| %>
  <% if feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card-wrapper">
  <div class="card" style="width: 60rem;">
    <div class="card-body">
      <div class="form-group">
        <div>
          <% form.label :date_and_time, style: "display: block" %>
          <% form.datetime_field :created_at, class: "form-control" %>
        </div>

        <div>
          <%= form.label :room %><br>
          <%= form.select :room, [ "Wiggly Worms", "Dancing Dragonflies", "Cheeky Hens", "Little Ladybirds", "Busy Bumblebees", "Little Green Rascals"], :prompt => 'Select a room' %>
        </div>

        <div>
          <%= form.label :message, style: "display: block" %>
          <%= form.text_area :body, placeholder: "What do you want to tell us?", class: "form-control" %>
        </div>

        <div>
          <%= form.label :happy?, style: "display: block" %>
          <%= form.check_box :happy %>
        </div>

        <div>
          <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div><!-- End form group -->
    </div><!-- End card body -->
    </div><!-- End card -->
  </div><!-- End card wrapper -->
<% end %>
